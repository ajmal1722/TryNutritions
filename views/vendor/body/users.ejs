
<!-- Include sidebar -->
<%- include('../partials/_sidebar.ejs')%>
<!-- /Include sidebar -->


	<!-- CONTENT -->
	<section id="content">
		
		
		<!-- include NAVBAR -->
		<%- include('../partials/_navbar.ejs')%>
		<!-- include NAVBAR -->


		<!-- MAIN -->

        <main>
            <div class="container">
                <div class="container">
                        <!-- include HEAD TITLE -->
                        <%- include('../partials/_headTitle.ejs')%>
                        <!-- /include HEAD TITLE -->   
                    </div>
                
                    <!-- User Table -->
                    <div class="table-responsive">
                        <table class="table table-striped text-center">
                            <thead>
                            <tr>
                                <th class="py-3">Name</th>
                                <th class="py-3">Email</th>
                                <th class="py-3">Phone</th>
                                <th class="py-3">Status</th>
                                <th class="py-3">Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            <% userList.forEach(item => { %>
                              <tr>
                                  <td><%= item.name %></td>
                                  <td><%= item.email %></td>
                                  <td><%= item.phone %></td>
                                  <td class="<%= item.isBlocked === 'Active' ? 'text-success' : 'text-danger' %> fw-normal"><%= item.isBlocked %></td>
                                  <td>
                                      <a class="btn button btn-info mx-2" href="/viewUser?id=<%= item._id %>" role="button">View</a>
                                      <!-- Button trigger modal -->
                                      <button type="button" class="btn button <%= item.isBlocked === 'Active' ? 'btn-danger' : 'btn-warning' %> text-light" data-bs-toggle="modal" data-bs-target="#blockUserModal<%= item._id %>">
                                        <%= item.isBlocked === 'Active' ? 'Block' : 'Unblock' %>
                                      </button>
                                  </td>
                              </tr>
                          
                              <!-- modal  -->
                              <div class="modal fade" id="blockUserModal<%= item._id %>" tabindex="-1" aria-labelledby="blockUserModalLabel" aria-hidden="true">
                                  <div class="modal-dialog">
                                      <div class="modal-content">
                                          <div class="modal-header">
                                              <h5 class="modal-title" id="blockUserModalLabel">Block User</h5>
                                              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                          </div>
                                          <div class="modal-body">
                                              Are you sure want to <%= item.isBlocked === 'Active' ? 'block' : 'unblock' %> <%= item.name %>?
                                          </div>
                                          <div class="modal-footer">
                                              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                              <a href="/admin/blockUser?id=<%= item._id %>" class="btn btn-danger">
                                                <%= item.isBlocked === 'Active' ? 'Block' : 'Unblock' %>
                                              </a>
                                          </div>
                                      </div>
                                  </div>
                              </div>
                          <% }) %>                          
                            </tbody>
                        </table>
                    </div>
                </div> 
            </div>
        </main>
       

        <!-- /MAIN -->
          
        


	<script src="/admin/js/script.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>