
<!-- Include sidebar -->
<%- include('../partials/_sidebar.ejs')%>
<!-- /Include sidebar -->


	<!-- CONTENT -->
	<section id="content">
		
		
		<!-- include NAVBAR -->
		<%- include('../partials/_navbar.ejs')%>
		<!-- include NAVBAR -->


		<!-- MAIN -->

        <main>
            <div class="container">
                <div class="container">
                        <!-- include HEAD TITLE -->
                        <%- include('../partials/_headTitle.ejs')%>
                        <!-- /include HEAD TITLE -->   
                    </div>
                
                    <!-- User Table -->
                    <div class="table-responsive">
                        <table class="table table-striped text-center">
                            <thead>
                            <tr>
                                <th class="py-3">Name</th>
                                <th class="py-3">Email</th>
                                <th class="py-3">Phone</th>
                                <th class="py-3">Status</th>
                                <th class="py-3">Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            <!-- Sample User Rows -->
                            <tr>
                                <td>1</td>
                                <td>john_doe</td>
                                <td>john@example.com</td>
                                <td>Active</td>
                                <td>
                                    <!-- View and Block buttons -->
                                    <button type="button" class="btn btn-info">View</button>
                                    <button type="button" class="btn btn-danger">Block</button>
                                </td>
                            </tr>
                            <tr>
                                <td>2</td>
                                <td>jane_smith</td>
                                <td>jane@example.com</td>
                                <td>Blocked</td>
                                <td>
                                    <!-- View and Block buttons -->
                                    <button type="button" class="btn button btn-info mx-2">View</button>
                                    <button type="button" class="btn button btn-danger">Block</button>
                                </td>
                            </tr>
                            <% userList.forEach(item => { %>
                                <tr>
                                    <td><%= item.name %></td>
                                    <td><%= item.email %></td>
                                    <td><%= item.phone %></td>
                                    <td>
                                      <a class="btn button btn-info mx-2" href="/viewUser?id=<%= item._id %>" role="button">View</a>
                                      <!-- Button trigger modal -->
                                      <button type="button" class="btn button btn-danger" data-bs-toggle="modal" data-bs-target="#blockUserModal">
                                        Block
                                      </button>
                                    </td>
                                  </tr>

                                  <!-- modal  -->
                                  <div class="modal fade" id="blockUserModal" tabindex="-1" aria-labelledby="blockUserModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                      <div class="modal-content">
                                        <div class="modal-header">
                                          <h5 class="modal-title" id="blockUserModalLabel">Block User</h5>
                                          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                          Are you sure you want to block this user?
                                        </div>
                                        <div class="modal-footer">
                                          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                          <a href="/blockUser?id=<%= item._id %>" class="btn btn-danger">Block User</a>
                                        </div>
                                      </div>
                                    </div>
                                </div>
                              <% }) %> 
                            </tbody>
                        </table>
                    </div>
                </div> 
            </div>
        </main>
       

        <!-- /MAIN -->
          
        


	<script src="/admin/js/script.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>