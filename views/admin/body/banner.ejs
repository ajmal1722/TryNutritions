
<!-- Include sidebar -->
<%- include('../partials/_sidebar.ejs')%>
<!-- /Include sidebar -->


	<!-- CONTENT -->
	<section id="content">
		
		
		<!-- include NAVBAR -->
		<%- include('../partials/_navbar.ejs')%>
		<!-- include NAVBAR -->


		<!-- MAIN -->

        
        <main>
            <div class="container">
                    <!-- include HEAD TITLE -->
                    <%- include('../partials/_headTitle.ejs')%>
                    <!-- /include HEAD TITLE -->
                </div>
            
                <!-- Add Banner Button -->
                <div class="mb-3 mx-md-3 add-banner-button d-flex justify-content-end">
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addBannerModal">
                        Add Banner
                    </button>
                </div>
            
                <!-- Banner Table -->
                <div class="table-responsive">
                    <table class="table table-bordered text-center">
                        <thead>
                        <tr>
                            <th>Image</th>
                            <th>Category</th>
                            <th>Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        <!-- Sample Banner Rows -->
                        <tr>
                            <td><img src="banner1.jpg" alt="Banner 1" width="100"></td>
                            <td>Category 1</td>
                            <td>
                                <!-- Edit and Delete buttons -->
                                <button type="button" class="btn btn-warning">Edit</button>
                                <button type="button" class="btn btn-danger">Delete</button>
                            </td>
                        </tr>
                        <tr>
                            <td><img src="banner2.jpg" alt="Banner 2" width="100"></td>
                            <td>Category 2</td>
                            <td>
                                <!-- Edit and Delete buttons -->
                                <button type="button" class="btn btn-warning">Edit</button>
                                <button type="button" class="btn btn-danger">Delete</button>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            
            <!-- Add Banner Modal -->
            <div class="modal fade" id="addBannerModal" tabindex="-1" aria-labelledby="addBannerModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="addBannerModalLabel">Add Banner</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <!-- Form for adding a banner -->
                            <form>
                                <div class="mb-3">
                                    <label for="bannerImage" class="form-label">Image:</label>
                                    <input type="file" class="form-control" id="bannerImage" accept="image/*" required>
                                </div>
                                <div class="mb-3">
                                    <label for="bannerCategory" class="form-label">Category:</label>
                                    <input type="text" class="form-control" id="bannerCategory" required>
                                </div>
                                <button type="button" class="btn btn-primary">Add Banner</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        

        <!-- /MAIN -->
          


	<script src="/admin/js/script.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
