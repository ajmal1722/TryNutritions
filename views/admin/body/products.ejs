 
<!-- Include sidebar -->
<%- include('../partials/_sidebar.ejs')%>
<!-- /Include sidebar -->


	<!-- CONTENT -->
	<section id="content">
		
		
		<!-- include NAVBAR -->
		<%- include('../partials/_navbar.ejs')%>
		<!-- include NAVBAR -->


		<!-- MAIN -->

        
         
        <main>
          <!-- include HEAD TITLE -->
          <%- include('../partials/_headTitle.ejs')%>
          <!-- /include HEAD TITLE -->

            <a href="/admin/addProducts" class="btn-download">
              <span class="text mx-md-2">Add Products</span>
            </a>
          </div>

          <div class="container my-4">
            <div class="row justify-content-center">
              <div class="">
                
          
                <div class="product-list table-responsive">
                  <table class="table table-striped text-center">
                    <thead>
                      <tr class="">
                        <th scope="col">Image</th>
                        <th scope="col">Product Name</th>
                        <th scope="col">Category</th>
                        <th scope="col">Brand</th>
                        <th scope="col">manufacture</th>
                        <th scope="col">MRP</th>
                        <th scope="col">Price</th>
                        <th scope="col">Stock</th>
                        <th scope="col">Action</th>
                      </tr>
                    </thead>
                    <tbody>

                      <% products.forEach(item => { %>
                        <tr>
                          <td class="w-25"><img src="<%= item.productImage %>" alt="Product 1" class="rounded img-thumbnail h-25 w-25"></td>
                          <td><%= item.name %></td>
                          <td><%= item.category %></td>
                          <td><%= item.brand %></td>
                          <td><%= item.manufacture %></td>
                          <td><%= item.mrp %></td>
                          <td><%= item.sellingPrice %></td>
                          <td><%= item.stock %></td>
                          <td>
                            <button class="btn btn-sm btn-info"><i class="fas fa-edit"></i> Edit</button>
                            <button class="btn btn-sm btn-danger"><i class="fas fa-trash"></i> Delete</button>
                          </td>
                        </tr>
                      <% }) %> 
                      
                      <tr>
                        <td><img src="/images/product-10.jpg" alt="Product 2" class="rounded img-thumbnail w-25"></td>
                        <td>Product 2</td>
                        <td>$24.99</td>
                        <td>
                          <button class="btn btn-sm btn-info"><i class="fas fa-edit"></i> Edit</button>
                          <button class="btn btn-sm btn-danger"><i class="fas fa-trash"></i> Delete</button>
                        </td>
                      </tr>
                      </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </main>
        
        

        <!-- /MAIN -->
          


	<script src="/admin/js/script.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>