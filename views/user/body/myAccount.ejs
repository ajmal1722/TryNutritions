<div class="container mt-5">
    <div class="row">
      <div class="col-md-3 mt-5">
        <!-- Sidebar/Menu -->
        <div class="list-group">
          <a href="#" class="list-group-item list-group-item-action active">Dashboard</a>
          <a href="#" class="list-group-item list-group-item-action">My Orders</a>
          <a href="#" class="list-group-item list-group-item-action">My Profile</a>
          <a href="#" class="list-group-item list-group-item-action">Settings</a>
          <a href="#" class="list-group-item list-group-item-action">Logout</a>
        </div>
      </div>

      <div class="col-md-9">
        <!-- Content -->
        <h2>My Account</h2>
        <p>Welcome <%= userName %>!</p>

        <!-- Example Content: Orders -->
        <div class="card">
          <div class="card-header">
            Orders
          </div>
          <div class="card-body">
            <!-- Display a list of orders here -->
            <!-- Example: -->
            <ul class="list-group">
              <li class="list-group-item">Order #12345 - Date: [Order Date]</li>
              <li class="list-group-item">Order #67890 - Date: [Order Date]</li>
              <!-- Add more order items as needed -->
            </ul>
          </div>
        </div>

        <!-- Example Content: Profile -->
        <div class="card mt-3">
          <div class="card-header">
            Profile
          </div>
          <div class="card-body">
            <!-- Display user profile information and edit options -->
            <!-- Example: -->
            <form id="profileForm">
              <div class="form-group">
                <label for="userName">Name:</label>
                <input type="text" class="form-control" id="userName" value="[User Name]" readonly>
              </div>
              <div class="form-group">
                <label for="userEmail">Email:</label>
                <input type="email" class="form-control" id="userEmail" value="[User Email]" readonly>
              </div>
              <div class="form-group">
                <label for="userPhone">Phone:</label>
                <input type="tel" class="form-control" id="userPhone" value="[User Phone]" readonly>
              </div>
              <div class="form-group">
                <label for="userAddress">Address:</label>
                <textarea class="form-control" id="userAddress" rows="3" readonly>[User Address]</textarea>
              </div>
              <button type="button" class="btn btn-primary mt-3" onclick="enableEdit()">Edit Profile</button>
              <button type="button" class="btn btn-success" onclick="saveProfile()" style="display: none;">Save Changes</button>
            </form>
          </div>
        </div>

        <div id="addAddress" class="card mt-3">
          <div class="card-header">
            Add Address
          </div>
          <div class="card-body">
            <!-- Display address information and edit options -->
            <!-- Example: -->
            <form id="addressForm">
              <div class="form-group">
                <label for="address1">Address 1:</label>
                <input type="text" class="form-control" id="address1" value="[User Address 1]" readonly>
              </div>
              <div class="form-group">
                <label for="address2">Address 2:</label>
                <input type="text" class="form-control" id="address2" value="[User Address 2]" readonly>
              </div>
              <div class="form-group">
                <label for="city">City:</label>
                <input type="text" class="form-control" id="city" value="[User City]" readonly>
              </div>
              <div class="form-group">
                <label for="state">State:</label>
                <input type="text" class="form-control" id="state" value="[User State]" readonly>
              </div>
              <div class="form-group">
                <label for="zipCode">Zip Code:</label>
                <input type="text" class="form-control" id="zipCode" value="[User Zip Code]" readonly>
              </div>
              <button type="button" class="btn btn-primary" onclick="enableEditAddress()">Edit Address</button>
              <button type="button" class="btn btn-success" onclick="saveAddress()" style="display: none;">Save Changes</button>
            </form>
          </div>
        </div>
      </div>

      </div>
    </div>
  </div>
  
  <script>
    function enableEdit() {
      // Enable editing of input fields
      document.getElementById('userName').readOnly = false;
      document.getElementById('userEmail').readOnly = false;
      document.getElementById('userPhone').readOnly = false;
      document.getElementById('userAddress').readOnly = false;
  
      // Show the "Save Changes" button and hide the "Edit Profile" button
      document.querySelector('.btn-primary').style.display = 'none';
      document.querySelector('.btn-success').style.display = 'inline-block';
    }
  
    function saveProfile() {
      // Implement logic to save changes to the server/database
  
      // Disable editing of input fields
      document.getElementById('userName').readOnly = true;
      document.getElementById('userEmail').readOnly = true;
      document.getElementById('userPhone').readOnly = true;
      document.getElementById('userAddress').readOnly = true;
  
      // Show the "Edit Profile" button and hide the "Save Changes" button
      document.querySelector('.btn-primary').style.display = 'inline-block';
      document.querySelector('.btn-success').style.display = 'none';
    }
  </script>

